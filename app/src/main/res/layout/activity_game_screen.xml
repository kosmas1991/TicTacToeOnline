<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameScreen" android:orientation="vertical" android:padding="5sp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Login as: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                android:padding="3sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold" android:padding="3sp"/>
    </LinearLayout>
    <TextView
            android:text="Online players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/listView"/>
</LinearLayout>